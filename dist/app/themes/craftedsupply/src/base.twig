{% import 'macros.twig' as macros %}

<!doctype html>
<html
  class="front-end {{ body_class }}"
  data-loading="false"
  data-menu="closed"
  {{ site.language_attributes }}
>
<head>

  {# TODO: Ensure critical assets (i.e. fonts) are preloaded #}
  <link rel="preload" href="{{ assets }}/fonts/icomoon.woff2?2024-03-15" as="font" crossorigin="anonymous">

  {# DNS preconnects for ubiquitous external host dependencies. #}
  {# TODO: Ensure critical external host urls are preconnected (i.e. fonts, trackers, etc.) #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  {#
  <link rel="preconnect" href="//use.typekit.net" crossorigin="anonymous">
  <link rel="preconnect" href="//p.typekit.net" crossorigin="anonymous">
  <link rel="preconnect" href="//cloud.typenetwork.com" crossorigin="anonymous">
  <link rel="preconnect" href="//www.googletagmanager.com" crossorigin="anonymous">
  <link rel="preconnect" href="//www.google-analytics.com" crossorigin="anonymous">
  <link rel="preconnect" href="//www.google.com" crossorigin="anonymous">
  <link rel="preconnect" href="//stats.g.doubleclick.net" crossorigin="anonymous">
  #}

  {# <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet"> #}

  <meta charset="{{ site.charset }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# Wordpress Header Call #}
  {{ function('wp_head') }}

  <link rel="manifest" href="/manifest.json?2023-03-11" crossorigin="use-credentials">
  <link rel="icon" href="/favicon.ico?2023-03-11" type="image/svg+xml">
  <link rel="icon" href="/favicon.svg?2023-03-11" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png?2023-03-11">
  <meta name="theme-color" content="#001070">
 
</head>

  <body>

    {# Skip Link for a11y #}
    <a class="skiplink" href="#maincontent">{{ __('Skip to main content') }}</a>

    {# Page Container #}
    <div class="page-container">

      {# Header #}
      {% block header %}
        {% include 'components/site-header/site-header.twig' %}
      {% endblock %}

      {# Main Content #}
      <main id="maincontent">
        <article>

          {# Place to add pre-content components #}
          {% block before_content %}{% endblock %}

          {# Hero #}
          {% block hero %}
            {# {% include 'components/hero/hero.twig' %} #}
          {% endblock %}

          {# Content #}
          <div class="grid-container">
            {% block content %}
              {{ post.content }}
            {% endblock %}
          </div>
    
          {# Place to add post-content components #}
          {% block after_content %}{% endblock %}

        </article>
      </main>


      {# Footer #}
      {% block footer %}
        {% include 'components/site-footer/site-footer.twig' %}
      {% endblock %}

    </div>

    {# Wordpress Footer Call #}
    {{ function('wp_footer') }}

  </body>
</html>
