{% import 'macros.twig' as macros %}

<div
  class="fullscreen-slideshow-block {{block.className}}"
  id="{{block.anchor}}"
  {{is_preview ? 'data-preview' : ''}}
>

  <!-- Slider main container -->
  <div class="swiper">

    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">

      <!-- Slides -->
      {% for image in fields.images %}
        <div class="swiper-slide">
        {{ macros.image(image["image"]) }}
        </div>

      {% endfor %}


    </div>
    
    
  </div>
 

  <div class="fullscreen-slideshow-block-arrows">
    <img src="{{ assets }}/images/fullscreen-slideshow-down-arrows.svg" alt="Arrows imploring the user to scroll down">
  </div>
</div>
