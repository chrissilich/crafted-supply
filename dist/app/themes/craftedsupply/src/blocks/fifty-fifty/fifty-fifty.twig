{% import 'src/macros.twig' as macros %}

<section class="fifty-fifty-block {{block.className}}"
  id="{{block.anchor}}"
  {{is_preview ? 'data-preview' : ''}}
  data-image-side="{{ fields.image_side }}" >

  <div class="fifty-fifty-block-inner -apply-typography">

    <h2 class="fifty-fifty-block-heading">
        {{ fields.title }}
    </h2>

    <div 
      class="fifty-fifty-block-image" 
      data-animation="{{is_preview ? '':'fadeInUp'}}"
      data-animation-delay="{{fields.image_side ? 200 : 0}}"
    >
      {% if (fields.image) %}
        {{ macros.image(fields.image) }}
      {% else %}
        <img src="https://placehold.co/820x888/cccccc/aaaaaa/?text=Placeholder+Image" alt="Placeholder image">
      {% endif %}
    </div>

    <div 
      class="fifty-fifty-block-text" 
      data-animation="{{is_preview ? '':'fadeInUp'}}"
      data-animation-delay="{{fields.image_side ? 0 : 200}}"
    >
      {{ fields.text }}
    </div>

  </div>

</section>

