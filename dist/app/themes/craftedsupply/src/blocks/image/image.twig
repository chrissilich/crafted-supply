<figure
  class="image-block -{{fields.layout ? fields.layout : 'left'}} {{block.className}}"
  id="{{block.anchor}}"
  {{is_preview ? 'data-preview' : ''}}
>
  {% if fields.image %}
    <img
      src="{{fields.image.url}}"
      alt="{{fields.image.alt}}"
      class="image-block-image"
    />
  {% else %}
    <div class="image-block-image-placeholder"></div>
  {% endif %}

  {% if fields.image.caption %}
    <figcaption class="image-block-caption">
      {{fields.image.caption}}
    </figcaption>
  {% endif %}

</figure>
