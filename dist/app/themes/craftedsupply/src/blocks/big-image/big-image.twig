<figure
  class="big-image-block {{block.className}}"
  id="{{block.anchor}}"
  {{is_preview ? 'data-preview' : ''}}
>
 {% if fields.image %}
    <img
      src="{{fields.image.url}}"
      alt="{{fields.image.alt}}"
      class="big-image-block-image"
    />
  {% else %}
    <div class="big-image-block-image-placeholder"></div>
  {% endif %}

  {% if fields.caption %}
    <figcaption class="big-image-block-caption">
      {{fields.caption}}
    </figcaption>
  {% endif %}
</figure>
