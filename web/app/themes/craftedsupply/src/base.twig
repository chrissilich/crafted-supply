{% import 'macros.twig' as macros %}

<!doctype html>
<html
  class="front-end {{ body_class }} {{post.meta.header_overlay ? '-site-header-overlay-mode -white-menu-mode' : ''}}"
  data-loading="false"
  data-menu="closed"
  {{ site.language_attributes }}
>
<head>

  <link rel="preconnect" href="https://use.typekit.net">
  <link rel="preconnect" href="https://cdn.fonts.net">

  <meta charset="{{ site.charset }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# Wordpress Header Call #}
  {{ function('wp_head') }}

  <link rel="stylesheet" href="https://cdn.fonts.net/kit/9a5b40c3-1374-41fd-987e-b9eff8157542/9a5b40c3-1374-41fd-987e-b9eff8157542.css" />
  <link rel="stylesheet" href="https://use.typekit.net/fbw8vhj.css">
  <link rel="manifest" href="/manifest.json?2023-03-11" crossorigin="use-credentials">
  <link rel="icon" href="/favicon.ico?2023-03-11" type="image/svg+xml">
  <link rel="icon" href="/favicon.svg?2023-03-11" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png?2023-03-11">
  <meta name="theme-color" content="#001070">
 
</head>

  <body>

    {# Skip Link for a11y #}
    <a class="skiplink" href="#maincontent">{{ __('Skip to main content') }}</a>

    {# Hamburger nav #}
    {% block hamburger_nav %}
      {% include 'components/hamburger-nav/hamburger-nav.twig' %}
    {% endblock %}

    {# Hamburger button #}
    {% block hamburger_button %}
      {% include 'components/hamburger-button/hamburger-button.twig' %}
    {% endblock %}

    {# Page Container #}
    <div class="page-container">

      {# Header #}
      {% block header %}
        {% include 'components/site-header/site-header.twig' %}
      {% endblock %}

      {# Main Content #}
      <main id="maincontent">
        <article>

          {# Place to add pre-content components #}
          {% block before_content %}{% endblock %}

          {# Content #}
          <div class="grid-container">
            {% block content %}
              {{ post.content }}
            {% endblock %}
          </div>
    
          {# Place to add post-content components #}
          {% block after_content %}{% endblock %}

        </article>
      </main>


      {# Footer #}
      {% block footer %}
        {% include 'components/site-footer/site-footer.twig' %}
      {% endblock %}

    </div>

    {# Wordpress Footer Call #}
    {{ function('wp_footer') }}

  </body>
</html>
