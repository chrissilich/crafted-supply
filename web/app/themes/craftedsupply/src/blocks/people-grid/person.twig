{% set delay = 100 * index %}
{% if delay > 600 %}
	{% set delay = 600 %}
{% endif %}

<div 
	class="people-grid-block-person js-link-event"
	data-animation="{{is_preview ? '':'fadeInUp'}}"
	data-animation-delay="{{ delay }}"
>

	{% set headshot = get_image(person.meta.headshot) %}
	<div class="people-grid-block-person-headshot">
		<img src="{{ headshot.src }}" alt="{{ headshot.alt }}">
	</div>

	<div class="people-grid-block-person-content">
		<h3>
			<a href="{{person.link}}" class="js-link-event-link">
				{{ person.meta.first_name }}
				{{ person.meta.last_name }}
			</a>
		</h3>
		<p>
			{{ person.meta.job_title }}
		</p>
	</div>
</div>