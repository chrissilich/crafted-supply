{% import 'src/macros.twig' as macros %}

<header class="site-header {{ all_galleries ? "" : "-no-subnav" }} ">
  <div class="site-header-inner">

    {# Logo #}
    <a
      class="site-header-logo"
      href="/"
    >
      <img
        src="{{ assets }}/images/logo.svg"
        width="187"
        height="102"
        alt="{{ __('Crafted Supply Logo', 'craftedsupply') }}"
      >
    </a>



    {# Subnav #}
      {% if all_galleries %}
        <ul class="site-header-subnav">
        {% for gallery in all_galleries %}
          <li>
            <a 
              {% if gallery.id == post.id %}class="-active"{% endif %} 
              href="{{ gallery.link }}">
              {{ gallery.title }}
            </a>
          </li>
          <span class="pipe">|</span>
        {% endfor %}
      </ul>
    {% endif %}
  </div>{# close .site-header-inner #}

</header>


